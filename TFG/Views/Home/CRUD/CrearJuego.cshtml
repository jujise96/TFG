@model JuegoViewModel

@{
    ViewData["Title"] = "Crear Juego";
}

<div class="text-center">
    <h1 class="display-4">Bienvenido vamos a crear un juego</h1>
</div>

<div class="container mt-4">
    
    <form asp-action="CrearJuego" method="post">

        <div class="form-group">
            <label asp-for="IdElem"></label>
            <input asp-for="IdElem" class="form-control" />
            <span asp-validation-for="IdElem" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Nombre"></label>
            <input asp-for="Nombre" class="form-control" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Descripcion"></label>
            <textarea asp-for="Descripcion" class="form-control"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Imagen"></label>
            <input asp-for="Imagen" class="form-control" />
            <span asp-validation-for="Imagen" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Bugs"></label>
            <input asp-for="Bugs" class="form-control" />
            <span asp-validation-for="Bugs" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">Guardar Juego</button>
    </form>


</div>
